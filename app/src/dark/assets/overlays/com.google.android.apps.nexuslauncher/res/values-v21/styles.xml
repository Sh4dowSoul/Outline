<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LauncherTheme" parent="@*com.google.android.apps.nexuslauncher:style/BaseLauncherThemeWithCustomAttrs">
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:navigationBarColor">#00000000</item>

        <item name="android:textColorPrimary">#ffffffff</item>
        <item name="android:textColorSecondary">#ffffffff</item>
        <item name="android:textColorHint">#a0ffffff</item>
        <item name="android:textColorTertiary">#ccffffff</item>
        <item name="android:colorControlHighlight">#a0ffffff</item>
        <item name="android:colorPrimary">@*android:color/background_material_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:allAppsScrimColor">@*android:color/background_material_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:allAppsNavBarScrimColor">#1a000000</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorPrimary">@*android:color/background_material_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorSecondary">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:popupColorTertiary">@*android:color/background_dark</item>
        <item name="*com.google.android.apps.nexuslauncher:isMainColorDark">true</item>
        <item name="*com.google.android.apps.nexuslauncher:widgetsTheme">@*com.google.android.apps.nexuslauncher:style/WidgetContainerTheme.Dark</item>
    </style>
    <style name="LauncherThemeDark" parent="@*com.google.android.apps.nexuslauncher:style/LauncherTheme"/>
</resources>
