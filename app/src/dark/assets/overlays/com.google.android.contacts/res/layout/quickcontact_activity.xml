<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@*com.google.android.contacts:id/root"
    android:background="@*android:color/background_material_dark"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.apps.contacts.quickcontact.QuickContactAppBarLayout
        android:theme="@*com.google.android.contacts:style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@*com.google.android.contacts:id/app_bar_layout"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="@*com.google.android.contacts:dimen/quickcontact_header_height">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@*com.google.android.contacts:id/collapsing_toolbar"
            android:background="@*com.google.android.contacts:color/quickcontact_header_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@*com.google.android.contacts:style/Widget.Design.CollapsingToolbar">

            <include
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                layout="@*com.google.android.contacts:layout/quickcontact_header" />
        </android.support.design.widget.CollapsingToolbarLayout>
    </com.google.android.apps.contacts.quickcontact.QuickContactAppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@*com.google.android.contacts:id/content_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@*com.google.android.contacts:style/Widget.Design.CollapsingToolbar">

        <include
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            layout="@*com.google.android.contacts:layout/quickcontact_content" />
    </android.support.v4.widget.NestedScrollView>

    <include
        android:layout_gravity="end|bottom|center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@*com.google.android.contacts:dimen/floating_action_button_margin_bottom"
        android:layout_marginEnd="@*com.google.android.contacts:dimen/floating_action_button_margin_right"
        layout="@*com.google.android.contacts:layout/quick_contact_floating_action_button" />
</android.support.design.widget.CoordinatorLayout>