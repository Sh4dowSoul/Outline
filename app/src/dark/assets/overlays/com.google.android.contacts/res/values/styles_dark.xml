    <style name="Widget.Design.CollapsingToolbar" parent="@android:style/Widget">
        <item name="*com.google.android.contacts:expandedTitleMargin">32.0dip</item>
        <item name="*com.google.android.contacts:statusBarScrim">?android:colorPrimaryDark</item>
        <item name="*com.google.android.contacts:layout_scrollFlags">enterAlways|enterAlwaysCollapsed|scroll</item>
        <item name="*com.google.android.contacts:expandedTitleGravity">bottom|center</item>
        <item name="*com.google.android.contacts:titleEnabled">false</item>

        <item name="*com.google.android.contacts:layout_behavior">@*com.google.android.contacts:string/appbar_scrolling_view_behavior</item>
    </style>

    <!-- Toolbar Text -->
    <style name="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" parent="@*com.google.android.contacts:style/Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />
