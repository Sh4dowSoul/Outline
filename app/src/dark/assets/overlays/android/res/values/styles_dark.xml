<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- USB Dialog -->
    <style name="Theme.Material.Light.Dialog.NoActionBar" parent="@*android:style/Theme.Material.Dialog.NoActionBar">
        <item name="@*android:windowActionBar">false</item>
        <item name="@*android:windowNoTitle">true</item>
    </style>

    <!-- Settings -->
        <style name="Theme.Material.Settings" parent="@*android:style/Theme.Material">
            <item name="*android:presentationTheme">@*android:style/Theme.Material.Settings.Dialog.Presentation</item>
            <item name="*android:colorPrimary">@*android:color/primary_material_settings_light</item>
            <item name="*android:colorPrimaryDark">@*android:color/primary_dark_material_settings_light</item>
            <item name="*android:colorSecondary">@*android:color/secondary_material_settings_light</item>
            <item name="*android:panelMenuListTheme">@*android:style/Theme.Material.Settings.CompactMenu</item>
            <item name="*android:searchDialogTheme">@*android:style/Theme.Material.Settings.SearchBar</item>
            <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
        </style>
        <!-- Actionbar Text -->
        <style name="ThemeOverlay.DeviceDefault.ActionBar.Accent" parent="@*android:style/ThemeOverlay.Material.ActionBar">
            <item name="*android:textColorPrimary">#FFFFFF</item>
        </style>
        <style name="Theme.Material.Settings.BaseDialog" parent="@*android:style/Theme.Material.BaseDialog">
            <item name="@*android:colorPrimary">@*android:color/primary_material_settings</item>
            <item name="@*android:colorPrimaryDark">@*android:color/primary_dark_material_settings</item>
            <item name="@*android:colorSecondary">@*android:color/secondary_material_settings</item>
        </style>
        <style name="Theme.Material.Settings.Dialog.BaseAlert" parent="@*android:style/Theme.Material.Dialog.BaseAlert">
            <item name="@*android:colorPrimary">@*android:color/primary_material_settings</item>
            <item name="@*android:colorPrimaryDark">@*android:color/primary_dark_material_settings</item>
            <item name="@*android:colorSecondary">@*android:color/secondary_material_settings</item>
        </style>
</resources>
