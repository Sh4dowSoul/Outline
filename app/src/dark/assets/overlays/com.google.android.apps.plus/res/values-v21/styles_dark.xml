<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Report Abuse Activity Theme -->
    <style name="UrawTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorControlActivated">@*com.google.android.apps.plus:color/quantum_googblue500</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
    </style>

    <!-- Share Dialog -->
    <style name="Theme.Sharekit" parent="@*com.google.android.apps.plus:style/Theme.SharekitBase">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustResize|stateHidden</item>
        <item name="android:alertDialogTheme">@*com.google.android.apps.plus:style/Theme.Arkham.AlertDialogTheme</item>
        <item name="android:colorAccent">@*com.google.android.apps.plus:color/quantum_googblue</item>
        <item name="*com.google.android.apps.plus:colorAccent">@*com.google.android.apps.plus:color/quantum_googblue</item>
        <item name="*com.google.android.apps.plus:alertDialogTheme">@*com.google.android.apps.plus:style/Theme.Arkham.AlertDialogTheme</item>
        <item name="android:backgroundTint">@*android:color/background_material_dark</item>
    </style>
</resources>
