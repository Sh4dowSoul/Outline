<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Theme -->
    <style name="Theme.Plus" parent="@*com.google.android.apps.plus:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorLink">@*com.google.android.apps.plus:color/text_blue</item>
        <item name="android:actionBarSize">@*com.google.android.apps.plus:dimen/action_bar_menu_item_height</item>
        <item name="android:alertDialogTheme">@*com.google.android.apps.plus:style/Theme.Arkham.AlertDialogTheme</item>
        <item name="android:textColorLinkInverse">@*com.google.android.apps.plus:color/text_blue</item>
        <item name="android:colorAccent">@*com.google.android.apps.plus:color/quantum_googblue</item>
        <item name="*com.google.android.apps.plus:colorPrimary">@*com.google.android.apps.plus:color/action_bar_color</item>
        <item name="*com.google.android.apps.plus:colorPrimaryDark">@*com.google.android.apps.plus:color/status_bar_color</item>
        <item name="*com.google.android.apps.plus:colorAccent">@*com.google.android.apps.plus:color/quantum_googblue</item>
        <item name="*com.google.android.apps.plus:alertDialogTheme">@*com.google.android.apps.plus:style/Theme.Arkham.AlertDialogTheme</item>
        <item name="*com.google.android.apps.plus:editAudienceBackground">?android:editTextBackground</item>
        <item name="*com.google.android.apps.plus:buttonSelectableBackground">?android:selectableItemBackground</item>
        <item name="*com.google.android.apps.plus:listSelector">?android:listChoiceBackgroundIndicator</item>
        <item name="android:backgroundTint">@*android:color/background_material_dark</item>
    </style>

    <!-- Report Abuse Activity Theme -->
    <style name="UrawTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorControlActivated">@*com.google.android.apps.plus:color/quantum_googblue500</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
    </style>


    <!-- Replacement Styles (for removal of attrs.xml) -->
    <style name="Base.TextAppearance.AppCompat.Medium.Inverse" parent="">
        <item name="*com.google.android.apps.plus:layout_behavior">@*com.google.android.apps.plus:string/appbar_scrolling_view_behavior</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Small.Inverse" parent="">
        <item name="*com.google.android.apps.plus:layout_scrollFlags">enterAlways|scroll</item>
    </style>
    <style name="Base.TextAppearance.AppCompat.Large.Inverse" parent="">
        <item name="*com.google.android.apps.plus:layout_collapseMode">pin</item>
    </style>
    <!-- Collapsing Toolbar -->
    <style name="Widget.Design.CollapsingToolbar" parent="">
        <item name="*com.google.android.apps.plus:layout_scrollFlags">exitUntilCollapsed|scroll</item>
        <item name="*com.google.android.apps.plus:statusBarScrim">?android:colorPrimaryDark</item>
        <item name="*com.google.android.apps.plus:contentScrim">?android:colorPrimary</item>
    </style>
</resources>
