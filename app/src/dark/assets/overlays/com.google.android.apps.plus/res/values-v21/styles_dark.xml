<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomBarItemVertical">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@*android:color/background_material_dark</item>
        <item name="android:paddingTop">7.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">-5.0dip</item>
    </style>

    <style name="Platform.AppCompat.Light" parent="@android:style/Theme.Material">
        <item name="android:windowBackground">@android:color/background_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
    </style>

    <!-- Report Abuse Activity Theme -->
    <style name="UrawTheme" parent="@*android:style/Theme.Material">
        <item name="android:colorControlActivated">@*com.google.android.apps.plus:color/quantum_googblue500</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
    </style>

    <style name="Theme.AclPickerTheme" parent="@*com.google.android.apps.plus:style/Theme.AppCompat">
        <item name="android:colorBackground">@*com.google.android.apps.plus:color/acl_list_background</item>
        <item name="android:windowBackground">@*com.google.android.apps.plus:color/acl_list_background</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:alertDialogTheme">@*com.google.android.apps.plus:style/Theme.AclPickerTheme.AlertDialogTheme</item>
        <item name="*com.google.android.apps.plus:contentInsetStart">0.0dip</item>
        <item name="*com.google.android.apps.plus:colorAccent">@*com.google.android.apps.plus:color/quantum_googblue</item>
        <item name="*com.google.android.apps.plus:colorPrimary">@*android:color/primary_material_dark</item>
        <item name="*com.google.android.apps.plus:colorPrimaryDark">@*android:color/primary_dark_material_dark</item>
        <item name="*com.google.android.apps.plus:alertDialogTheme">@*com.google.android.apps.plus:style/Theme.AclPickerTheme.AlertDialogTheme</item>
    </style>
</resources>
