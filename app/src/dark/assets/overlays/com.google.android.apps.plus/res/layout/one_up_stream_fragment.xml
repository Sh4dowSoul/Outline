<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.google.android.apps.plus">

    <android.support.design.widget.CoordinatorLayout
        android:id="@*com.google.android.apps.plus:id/one_up_overlay"
        android:background="@null"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@*com.google.android.apps.plus:id/comment_fragment_container">

        <android.support.design.widget.AppBarLayout
            android:id="@*com.google.android.apps.plus:id/one_up_appbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@*com.google.android.apps.plus:id/one_up_toolbar"
                android:background="?android:colorPrimary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:actionBarSize"
                app:popupTheme="@*com.google.android.apps.plus:style/Theme.ArkhamLight"
                app:theme="@*com.google.android.apps.plus:style/Theme.Plus.ActionBar"
                style="@*com.google.android.apps.plus:style/Base.TextAppearance.AppCompat.Small.Inverse"/>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@*com.google.android.apps.plus:id/fragment_container"
            android:background="@*com.google.android.apps.plus:color/quantum_grey200"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@*com.google.android.apps.plus:style/Base.TextAppearance.AppCompat.Medium.Inverse" />

        <View
            android:id="@*com.google.android.apps.plus:id/shadow"
            android:background="@*com.google.android.apps.plus:drawable/stream_elevation_shadow"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="4.0dip"
            app:layout_collapseMode="pin"
            style="@*com.google.android.apps.plus:style/Base.TextAppearance.AppCompat.Medium.Inverse" />
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.google.android.apps.plus:id/comment_fragment_container"
        android:background="@*com.google.android.apps.plus:color/quantum_white_100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>