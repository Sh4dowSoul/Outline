<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        android:id="@*com.google.android.apps.plus:id/one_up_overlay"
        android:background="@null"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@*com.google.android.apps.plus:id/comment_fragment_container">

        <android.support.design.widget.AppBarLayout
            android:id="@*com.google.android.apps.plus:id/one_up_appbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:elevation="0.0dip">

            <android.support.v7.widget.Toolbar
                android:id="@*com.google.android.apps.plus:id/one_up_toolbar"
                android:background="?colorPrimary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="?actionBarSize"
                app:popupTheme="@*com.google.android.apps.plus:style/Theme.ArkhamLight"
                app:layout_scrollFlags="enterAlways|scroll"
                app:titleTextAppearance="@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.Text"
                app:theme="@*com.google.android.apps.plus:style/Theme.ArkhamDark"
                android:backgroundTint="@null"/>
        </android.support.design.widget.AppBarLayout>

        <FrameLayout
            android:id="@*com.google.android.apps.plus:id/fragment_container"
            android:background="@*com.google.android.apps.plus:color/quantum_grey200"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@*com.google.android.apps.plus:string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.google.android.apps.plus:id/comment_fragment_container"
        android:background="@*com.google.android.apps.plus:color/quantum_white_100"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
</RelativeLayout>