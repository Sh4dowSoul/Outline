<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Notiz Toolbar -->
    <style name="EditorToolbarTheme" parent="@*com.google.android.keep:style/ThemeOverlay.AppCompat.ActionBar">
        <item name="*com.google.android.keep:colorControlNormal">#FFFFFF</item>
    </style>

   <style name="DrawerItemIconStyle">
       <item name="android:gravity">center</item>
       <item name="android:layout_gravity">center</item>
       <item name="android:layout_width">@*com.google.android.keep:dimen/drawer_item_icon_size</item>
       <item name="android:layout_height">@*com.google.android.keep:dimen/drawer_item_icon_size</item>
       <item name="android:scaleType">center</item>
       <item name="android:alpha">1</item>
   </style>

    <style name="KeepPhotoViewerTheme" parent="@*com.google.android.keep:style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@*com.google.android.keep:color/default_background_color</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@*com.google.android.keep:color/dark_default_color</item>
        <item name="android:colorPrimary">@*com.google.android.keep:color/dark_default_color</item>
        <item name="*com.google.android.keep:popupTheme">@*com.google.android.keep:style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="LabelEditorEntryIcon" parent="@*com.google.android.keep:style/LabelEditorEntryOpaqueIcon">
        <item name="android:alpha">1</item>
    </style>

    <style name="DrawerLandingPageItemTextActiveStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- Create Bottom Bar -->
    <style name="QebButtonStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">#004caf50</item>
        <item name="android:layout_width">48.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:alpha">1</item>
    </style>

    <style name="ShareActivityInvalidShareeEmail">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:paddingBottom">2.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="LabelEditorCheckboxTheme" parent="@*com.google.android.keep:style/ThemeOverlay.AppCompat">
        <item name="*com.google.android.keep:colorAccent">@*com.google.android.keep:color/label_editor_checkbox_color</item>
    </style>
</resources>
