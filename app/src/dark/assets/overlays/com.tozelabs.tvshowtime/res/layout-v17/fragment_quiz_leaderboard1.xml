<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:id="@*com.tozelabs.tvshowtime:id/layout"
    android:backgroundTint="@*com.tozelabs.tvshowtime:color/quiz_leaderboard_header_bg"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.tozelabs.tvshowtime">

    <android.support.design.widget.AppBarLayout
        android:theme="@*com.tozelabs.tvshowtime:style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:id="@*com.tozelabs.tvshowtime:id/appbar"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@*com.tozelabs.tvshowtime:id/collapsing_toolbar"
            android:fitsSystemWindows="true"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            app:layout_scrollFlags="enterAlways|exitUntilCollapsed|scroll"
            app:contentScrim="@android:color/holo_orange_light"
            app:layout_collapseMode="parallax">





            <android.support.v4.widget.NestedScrollView
                android:id="@*com.tozelabs.tvshowtime:id/layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:layout_behavior="@*com.tozelabs.tvshowtime:string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:background="@*com.tozelabs.tvshowtime:color/mineShaft"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@*com.tozelabs.tvshowtime:id/quizImageLayout"
                        android:layout_width="fill_parent"
                        android:layout_height="140.0dip">

                        <ImageView
                            android:id="@*com.tozelabs.tvshowtime:id/quizImage"
                            android:background="@*com.tozelabs.tvshowtime:color/secondary_text_white"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:src="@*com.tozelabs.tvshowtime:drawable/default_fanart_medium"
                            android:scaleType="centerCrop"
                            android:adjustViewBounds="true"
                            app:layout_collapseMode="parallax" />

                        <View
                            android:background="@*com.tozelabs.tvshowtime:color/black_tr_65"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" />
                    </FrameLayout>

                    <RelativeLayout
                        android:background="@*com.tozelabs.tvshowtime:color/quiz_leaderboard_header_bg"
                        android:layout_width="fill_parent"
                        android:layout_height="140.0dip"
                        android:layout_below="@*com.tozelabs.tvshowtime:id/quizImageLayout">

                        <com.tozelabs.tvshowtime.widget.TZCountingTextView
                            android:textSize="@*com.tozelabs.tvshowtime:dimen/typo_headline"
                            android:textColor="@*com.tozelabs.tvshowtime:color/quiz_leaderboard_text"
                            android:gravity="center_horizontal"
                            android:id="@*com.tozelabs.tvshowtime:id/userScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="43.0dip"
                            android:layout_centerHorizontal="true"
                            />

                        <com.tozelabs.tvshowtime.widget.TZTextView
                            android:textSize="16.0sp"
                            android:textColor="#FFFFFF"
                            android:gravity="center_horizontal"
                            android:id="@*com.tozelabs.tvshowtime:id/quizSummary"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@*com.tozelabs.tvshowtime:dimen/semi_item_spacing"
                            android:layout_marginBottom="@*com.tozelabs.tvshowtime:dimen/semi_item_spacing"
                            android:layout_below="@*com.tozelabs.tvshowtime:id/userScore"
                            android:layout_centerHorizontal="true"
                            app:textFont="ProximaNova-Sbold" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@*com.tozelabs.tvshowtime:id/headerLine"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <com.tozelabs.tvshowtime.widget.TZTextView
                            android:textSize="16.0sp"
                            android:textColor="@*com.tozelabs.tvshowtime:color/white"
                            android:id="@*com.tozelabs.tvshowtime:id/leaderBoardTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LEADERBOARD"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />

                        <ImageView
                            android:id="@*com.tozelabs.tvshowtime:id/btCloseLeaderboard"
                            android:padding="@*com.tozelabs.tvshowtime:dimen/quiz_header_padding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@*com.tozelabs.tvshowtime:drawable/cross"
                            android:adjustViewBounds="true"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@*com.tozelabs.tvshowtime:string/Close"
                            android:layout_alignParentStart="true" />

                        <ImageView
                            android:id="@*com.tozelabs.tvshowtime:id/btShareBtn"
                            android:padding="@*com.tozelabs.tvshowtime:dimen/quiz_header_padding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@*com.tozelabs.tvshowtime:drawable/ic_share_white_24dp"
                            android:adjustViewBounds="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:contentDescription="@*com.tozelabs.tvshowtime:string/Share"
                            android:layout_alignParentEnd="true" />
                    </RelativeLayout>

                    <com.tozelabs.tvshowtime.widget.ForegroundRoundedImageView
                        android:id="@*com.tozelabs.tvshowtime:id/profileImage"
                        android:layout_width="@*com.tozelabs.tvshowtime:dimen/quiz_header_profile_image_width"
                        android:layout_height="@*com.tozelabs.tvshowtime:dimen/quiz_header_profile_image_height"
                        android:layout_marginTop="11.0dip"
                        android:src="@*com.tozelabs.tvshowtime:drawable/default_user"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_below="@*com.tozelabs.tvshowtime:id/headerLine"
                        android:layout_centerHorizontal="true"
                        app:riv_border_width="1.0dip"
                        app:riv_border_color="@*com.tozelabs.tvshowtime:color/white"
                        app:riv_mutate_background="true"
                        app:riv_oval="true" />
                </RelativeLayout>
            </android.support.v4.widget.NestedScrollView>







        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <com.tozelabs.tvshowtime.widget.LinearObservableRecyclerView
        android:scrollbarStyle="insideOverlay"
        android:id="@*com.tozelabs.tvshowtime:id/leaderboardList"
        android:background="@*android:color/background_material_dark"
        android:visibility="visible"
        android:scrollbars="vertical"
        android:clipToPadding="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="55.0dip"
        app:layout_behavior="@*com.tozelabs.tvshowtime:string/appbar_scrolling_view_behavior" />















    <RelativeLayout android:orientation="vertical"
        android:background="@*com.tozelabs.tvshowtime:color/quiz_leaderboard_header_bg"
        android:layout_width="fill_parent"
        android:layout_height="@*com.tozelabs.tvshowtime:dimen/quiz_leaderboard_header_height"
        android:layout_marginBottom="15.0dip"
        app:layout_behavior="@*com.tozelabs.tvshowtime:string/appbar_scrolling_view_behavior"
        app:layout_anchor="@*com.tozelabs.tvshowtime:id/appbar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:divider="@*com.tozelabs.tvshowtime:drawable/vertical_divider"
            android:showDividers="middle">

            <com.tozelabs.tvshowtime.widget.TZTextView
                android:textSize="@*com.tozelabs.tvshowtime:dimen/typo_button"
                android:textColor="@*com.tozelabs.tvshowtime:color/quiz_header_text_selector"
                android:gravity="center"
                android:id="@*com.tozelabs.tvshowtime:id/friendsBtn"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@*com.tozelabs.tvshowtime:string/QuizFriendsLeaderboard"
                android:layout_weight="1.0"
                android:textAllCaps="true" />

            <com.tozelabs.tvshowtime.widget.TZTextView
                android:textSize="@*com.tozelabs.tvshowtime:dimen/typo_button"
                android:textColor="@*com.tozelabs.tvshowtime:color/quiz_header_text_selector"
                android:gravity="center"
                android:id="@*com.tozelabs.tvshowtime:id/globalBtn"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:text="@*com.tozelabs.tvshowtime:string/QuizGlobalLeaderboard"
                android:layout_weight="1.0"
                android:textAllCaps="true" />
        </LinearLayout>
    </RelativeLayout>













    <include layout="@*com.tozelabs.tvshowtime:layout/loading" />

    <com.tozelabs.tvshowtime.widget.TZButton
        android:textSize="@*com.tozelabs.tvshowtime:dimen/typo_large"
        android:textColor="@*com.tozelabs.tvshowtime:color/white"
        android:layout_gravity="bottom"
        android:id="@*com.tozelabs.tvshowtime:id/btChallengeFriends"
        android:paddingLeft="@*com.tozelabs.tvshowtime:dimen/launch_quiz_button_padding"
        android:paddingRight="@*com.tozelabs.tvshowtime:dimen/launch_quiz_button_padding"
        android:layout_width="fill_parent"
        android:layout_height="@*com.tozelabs.tvshowtime:dimen/quiz_challenge_btn_height"
        android:layout_marginLeft="@*com.tozelabs.tvshowtime:dimen/big_item_spacing"
        android:layout_marginRight="@*com.tozelabs.tvshowtime:dimen/big_item_spacing"
        android:layout_marginBottom="@*com.tozelabs.tvshowtime:dimen/super_big_item_spacing"
        android:text="@*com.tozelabs.tvshowtime:string/QuizChallengeFriends"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_marginStart="@*com.tozelabs.tvshowtime:dimen/big_item_spacing"
        android:layout_marginEnd="@*com.tozelabs.tvshowtime:dimen/big_item_spacing"
        app:textFont="ProximaNova-Sbold"
        style="@*com.tozelabs.tvshowtime:style/ButtonQuizStyle" />
</android.support.design.widget.CoordinatorLayout>