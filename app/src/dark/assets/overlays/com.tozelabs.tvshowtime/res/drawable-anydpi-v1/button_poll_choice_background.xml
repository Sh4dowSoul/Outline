    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@*com.tozelabs.tvshowtime:dimen/answer_button_radius" />
            <solid android:color="@*com.tozelabs.tvshowtime:color/saffron_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@*com.tozelabs.tvshowtime:dimen/answer_button_radius" />
            <solid android:color="@*com.tozelabs.tvshowtime:color/saffron_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@*com.tozelabs.tvshowtime:dimen/answer_button_radius" />
            <solid android:color="@*android:color/background_dark" />
        </shape>
    </item>
</selector>