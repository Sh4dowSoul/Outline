<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@*android:color/background_material_dark" />
            <stroke android:width="2.0dip" android:color="@*com.tozelabs.tvshowtime:color/atlantis" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="4dp" />
            <solid android:color="@*android:color/background_material_dark" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@*com.tozelabs.tvshowtime:color/saffron_pressed" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@*com.tozelabs.tvshowtime:color/saffron_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="@*android:color/background_material_dark" />
        </shape>
    </item>
</selector>