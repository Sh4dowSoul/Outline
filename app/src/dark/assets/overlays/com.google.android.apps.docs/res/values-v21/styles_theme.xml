<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseDialogTheme" parent="@android:style/Theme.Material.Dialog.MinWidth">
        <item name="android:colorAccent">@*com.google.android.apps.docs:color/m_app_accent</item>
    </style>

    <style name="BaseAppTheme" parent="@android:style/Theme.Material">
        <item name="android:buttonStyle">@*com.google.android.apps.docs:style/BaseButton</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorPrimary">@*com.google.android.apps.docs:color/m_app_primary</item>
        <item name="android:colorPrimaryDark">@*com.google.android.apps.docs:color/m_app_secondary</item>
        <item name="android:colorAccent">@*com.google.android.apps.docs:color/m_app_accent</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
    </style>

    <style name="OverlayActionBarStyleLight" parent="@*com.google.android.apps.docs:style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@*android:color/primary_material_dark</item>
        <item name="android:height">@*com.google.android.apps.docs:dimen/viewer_action_bar_height</item>
        <item name="android:elevation">5.0dip</item>
        <item name="*com.google.android.apps.docs:height">@*com.google.android.apps.docs:dimen/viewer_action_bar_height</item>
        <item name="*com.google.android.apps.docs:background">@*android:color/primary_material_dark</item>
    </style>
</resources>
