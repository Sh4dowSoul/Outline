<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@*android:color/background_material_dark"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.apps.messaging.shared.ui.AsyncImageView
        android:layout_gravity="center"
        android:id="@*com.google.android.apps.messaging:id/preview"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_margin="@*com.google.android.apps.messaging:dimen/sticker_set_overview_hero_pic_margin"
        android:scaleType="centerInside"
        android:layout_weight="1.0" />

    <View
        android:id="@*com.google.android.apps.messaging:id/divider"
        android:background="@*com.google.android.apps.messaging:color/sticker_set_overview_divider"
        android:layout_width="fill_parent"
        android:layout_height="1.0dip" />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@*com.google.android.apps.messaging:id/detail"
        android:background="@*com.google.android.apps.messaging:color/sticker_set_overview_detail_background_color"
        android:paddingBottom="@*com.google.android.apps.messaging:dimen/sticker_set_overview_detail_section_padding"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.google.android.apps.messaging.shared.ui.AsyncImageView
            android:layout_gravity="top"
            android:id="@*com.google.android.apps.messaging:id/setImage"
            android:layout_width="70.0dip"
            android:layout_height="70.0dip"
            style="@*com.google.android.apps.messaging:style/StickerSetOverviewDetailIconStyle" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:ellipsize="end"
                android:id="@*com.google.android.apps.messaging:id/stickerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@*com.google.android.apps.messaging:dimen/sticker_set_overview_sticker_name_margin_top"
                android:maxLines="1"
                android:singleLine="true"
                style="@*com.google.android.apps.messaging:style/StickerSetListItemViewStickerNameTextStyle" />

            <TextView
                android:ellipsize="end"
                android:id="@*com.google.android.apps.messaging:id/authorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                style="@*com.google.android.apps.messaging:style/StickerSetListItemViewStickerCreatorTextStyle" />

            <TextView
                android:ellipsize="end"
                android:id="@*com.google.android.apps.messaging:id/downloadTaglineTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@*com.google.android.apps.messaging:dimen/sticker_set_overview_text_view_margin"
                android:text="@*com.google.android.apps.messaging:string/sticker_set_overview_download_tagline"
                android:maxLines="2"
                style="@*com.google.android.apps.messaging:style/StickerSetListItemViewStickerCreatorTextStyle" />

            <TextView
                android:id="@*com.google.android.apps.messaging:id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@*com.google.android.apps.messaging:dimen/sticker_set_overview_text_view_margin"
                style="@*com.google.android.apps.messaging:style/StickerSetOverviewDownloadStatusStyle" />

            <TextView
                android:id="@*com.google.android.apps.messaging:id/download"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="@*com.google.android.apps.messaging:dimen/sticker_download_textview_height"
                android:layout_marginTop="@*com.google.android.apps.messaging:dimen/sticker_set_overview_text_view_margin"
                android:text="@*com.google.android.apps.messaging:string/sticker_set_download"
                style="@*com.google.android.apps.messaging:style/StickerSetOverviewDownloadButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>