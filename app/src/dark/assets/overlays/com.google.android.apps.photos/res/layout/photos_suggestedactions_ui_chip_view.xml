<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_vertical"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:id="@*com.google.android.apps.photos:id/photobar_suggestion_chip"
    android:background="@*com.google.android.apps.photos:drawable/photos_suggestedactions_ui_chip_background"
    android:backgroundTint="@*android:color/background_material_dark"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@*com.google.android.apps.photos:id/action_image"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:scaleType="center"
        android:contentDescription="@null" />

    <TextView
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@*com.google.android.apps.photos:id/action_text"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40.0dip" />

    <ImageView
        android:id="@*com.google.android.apps.photos:id/close_button"
        android:padding="11.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@*com.google.android.apps.photos:drawable/quantum_ic_cancel_white_18"
        android:contentDescription="@null" />
</LinearLayout>