<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- New Mail - Background -->
    <style name="AbstractComposeArea">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@*android:color/background_material_dark</item>
        <item name="android:paddingLeft">@*com.google.android.gm:dimen/compose_area_start_padding</item>
        <item name="android:paddingRight">@*com.google.android.gm:dimen/compose_area_end_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:paddingStart">@*com.google.android.gm:dimen/compose_area_start_padding</item>
        <item name="android:paddingEnd">@*com.google.android.gm:dimen/compose_area_end_padding</item>
    </style>

    <!-- New Mail - Recipient Suggestion Background -->
    <style name="RecipientEditTextViewBase" parent="@*android:attr/autoCompleteTextViewStyle">
        <item name="android:textAppearance">@*android:style/TextAppearance.Medium</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">32.0dip</item>
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
        <item name="android:inputType">textEmailAddress|textMultiLine</item>
        <item name="android:textDirection">locale</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="snooze_dialogSpinner" parent="@*com.google.android.gm:style/Widget.AppCompat.Spinner">
        <item name="android:textSize">@*com.google.android.gm:dimen/snooze_datepicker_spinner_text_size</item>
        <item name="android:textColor">@*com.google.android.gm:color/snooze_dark_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@*com.google.android.gm:dimen/snooze_datepicker_picker_text_vertical_padding</item>
        <item name="android:paddingRight">@*com.google.android.gm:dimen/snooze_datepicker_spinner_right_padding</item>
        <item name="android:paddingBottom">@*com.google.android.gm:dimen/snooze_datepicker_picker_text_vertical_padding</item>
        <item name="android:layout_marginLeft">@*com.google.android.gm:dimen/snooze_datepicker_default_margin</item>
        <item name="android:layout_marginRight">@*com.google.android.gm:dimen/snooze_datepicker_default_margin</item>
        <item name="android:minHeight">@*com.google.android.gm:dimen/snooze_datepicker_row_height</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingEnd">@*com.google.android.gm:dimen/snooze_datepicker_spinner_right_padding</item>
        <item name="android:popupBackground">@*android:color/background_material_dark</item>
    </style>
</resources>
