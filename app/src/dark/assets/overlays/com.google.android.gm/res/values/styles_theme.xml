<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Vacation Notice -->
    <style name="AbstractVacationResponderComposeArea">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@*android:color/background_material_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <!-- Mail Content -->
    <style name="ComposeFieldLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:addStatesFromChildren">true</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">#757575</item>
    </style>

    <!-- Mail Informations -->
    <style name="RecipientComposeFieldLayout" parent="@*com.google.android.gm:style/ComposeFieldLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@*android:color/background_material_dark</item>
    </style>

    <!-- Overflow -->
    <style name="ThemeOverlay.AppCompat.Light" parent="@*com.google.android.gm:style/Base.ThemeOverlay.AppCompat" />
</resources>
