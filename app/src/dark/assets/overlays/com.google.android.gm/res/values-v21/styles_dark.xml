<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Style -->
    <style name="MailActivityTheme" parent="@*com.google.android.gm:style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@*android:color/background_material_dark</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@*com.google.android.gm:color/mail_activity_status_bar_color</item>
        <item name="android:colorEdgeEffect">@*com.google.android.gm:color/edge_effect_color</item>
        <item name="*com.google.android.gm:drawerArrowStyle">@*com.google.android.gm:style/ActionBarDrawerArrowDrawableStyle</item>
        <item name="*com.google.android.gm:windowActionModeOverlay">true</item>
        <item name="*com.google.android.gm:actionBarPopupTheme">@*com.google.android.gm:style/ThemeOverlay.AppCompat.Light</item>
        <item name="*com.google.android.gm:actionModeBackground">@*com.google.android.gm:color/action_mode_background</item>
        <item name="*com.google.android.gm:popupMenuStyle">@*com.google.android.gm:style/MessageHeaderPopupStyle</item>
        <item name="*com.google.android.gm:colorPrimary">@*com.google.android.gm:color/primary_color</item>
        <item name="*com.google.android.gm:colorPrimaryDark">@*com.google.android.gm:color/primary_dark_color</item>
        <item name="*com.google.android.gm:colorAccent">@*com.google.android.gm:color/accent_blue</item>
        <item name="*com.google.android.gm:alertDialogTheme">@*com.google.android.gm:style/AlertDialogTheme</item>
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
    </style>

    <!-- Notification Text Color -->
    <style name="NotificationPrimaryText">
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="NotificationSecondaryText">
        <item name="android:textColor">#ffdddddd</item>
    </style>


    <!-- New Mail Screen -->
        <!-- Main Background 1 (Flashing through at beginning) -->
        <style name="ComposeTheme" parent="@*com.google.android.gm:style/UnifiedEmailTheme.Appcompat">
            <item name="android:colorBackground">@*android:color/background_material_dark</item>
            <item name="android:windowBackground">@*android:color/background_material_dark</item>
            <item name="android:dropDownListViewStyle">@*com.google.android.gm:style/ComposeDropdownListViewStyle</item>
            <item name="android:colorBackgroundCacheHint">@*android:color/background_dark</item>
            <item name="*com.google.android.gm:popupMenuStyle">@*com.google.android.gm:style/PopupMenu</item>
        </style>
        <!-- Main Background 2-->
        <style name="AbstractComposeArea">
            <item name="android:layout_gravity">center_horizontal</item>
            <item name="android:background">@*android:color/background_material_dark</item>
            <item name="android:paddingLeft">@*com.google.android.gm:dimen/compose_area_start_padding</item>
            <item name="android:paddingRight">@*com.google.android.gm:dimen/compose_area_end_padding</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">fill_parent</item>
            <item name="android:animateLayoutChanges">true</item>
            <item name="android:paddingStart">@*com.google.android.gm:dimen/compose_area_start_padding</item>
            <item name="android:paddingEnd">@*com.google.android.gm:dimen/compose_area_end_padding</item>
        </style>
        <!--Mail Adress Suggestions -->
        <style name="RecipientEditTextViewBase" parent="@*android:attr/autoCompleteTextViewStyle">
            <item name="android:textAppearance">@*android:style/TextAppearance.Medium</item>
            <item name="android:background">@null</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:minHeight">32.0dip</item>
            <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
            <item name="android:inputType">textEmailAddress|textMultiLine</item>
            <item name="android:textDirection">locale</item>
            <item name="android:textAlignment">viewStart</item>
        </style>
        <!-- Mail Content -->
        <style name="ComposeFieldLayout">
            <item name="android:orientation">horizontal</item>
            <item name="android:focusable">false</item>
            <item name="android:focusableInTouchMode">false</item>
            <item name="android:addStatesFromChildren">true</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#ffffffff</item>
            <item name="android:background">#757575</item>
        </style>
        <!-- Mail Informations -->
        <style name="RecipientComposeFieldLayout" parent="@*com.google.android.gm:style/ComposeFieldLayout">
            <item name="android:orientation">vertical</item>
            <item name="android:paddingTop">0.0dip</item>
            <item name="android:layout_width">fill_parent</item>
            <item name="android:layout_height">wrap_content</item>
            <item name="android:textColor">#ffffffff</item>
            <item name="android:background">@*android:color/background_material_dark</item>
        </style>
</resources>
