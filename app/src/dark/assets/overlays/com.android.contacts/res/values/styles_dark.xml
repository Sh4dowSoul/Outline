<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Contact -->
    <style name="PeopleTheme" parent="@android:style/Theme.Material">
        <item name="android:navigationBarColor">@*android:color/background_material_dark</item>
    </style>

    <!-- Suggestions Card Overflow Background -->
    <style name="PopupMenuStyleAppCompat" parent="@*com.android.contacts:style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@*android:color/background_floating_material_dark</item>
    </style>

    <!-- Splashscreen -->
    <style name="LaunchScreenTheme" parent="@*com.android.contacts:style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@*com.android.contacts:drawable/quantum_launchscreen_contacts</item>
        <item name="android:colorPrimaryDark">@*android:color/background_material_dark</item>
    </style>

    <style name="EmptyStateTextStyle">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="BaseTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Contacts - Cards -->
    <style name="ExpandingEntryCardStyle">
        <item name="android:elevation">@*com.android.contacts:dimen/expanding_entry_card_elevation</item>
        <item name="android:backgroundTint">@*android:color/background_material_dark</item>
        <item name="android:layout_marginBottom">@*com.android.contacts:dimen/expanding_entry_card_marginBottom</item>
        <item name="android:layout_marginEnd">@*com.android.contacts:dimen/expanding_entry_card_marginStartEnd</item>
        <item name="android:layout_marginStart">@*com.android.contacts:dimen/expanding_entry_card_marginStartEnd</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
