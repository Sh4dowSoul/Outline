        <item name="*com.google.android.calendar:tile_primary_text_color">@*com.google.android.calendar:color/tile_secondary_line</item>
        <item name="*com.google.android.calendar:tile_primary_text_size">@*com.google.android.calendar:dimen/two_line_tile_secondary_line_text_size</item>
    </style>
