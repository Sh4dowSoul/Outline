<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:id="@*com.google.android.youtube:id/conversation_reply_panel"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/small_font_size"
        android:textColor="?android:textColorSecondary"
        android:id="@*com.google.android.youtube:id/header"
        android:padding="16.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        res-auto:robotoFont="regular"
        xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

    <android.support.v7.widget.RecyclerView
        android:id="@*com.google.android.youtube:id/list"
        android:background="@*android:color/background_material_dark"
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never" />

    <LinearLayout
        android:orientation="vertical"
        android:id="@*com.google.android.youtube:id/error"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/medium_font_size"
            android:textColor="?android:textColorSecondary"
            android:gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_margin="16.0dip"
            android:text="@*com.google.android.youtube:string/error_message"
            android:layout_weight="1.0"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/medium_font_size"
            android:textColor="?colorPrimaryAlternate"
            android:gravity="center_horizontal"
            android:id="@*com.google.android.youtube:id/retry_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="56.0dip"
            android:text="@*com.google.android.youtube:string/yt_lib_common_retry"
            android:textAllCaps="true"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />
    </LinearLayout>

    <RelativeLayout
        android:id="@*com.google.android.youtube:id/loading"
        android:paddingTop="8.0dip"
        android:paddingBottom="8.0dip"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@*com.google.android.youtube:style/ConversationLargeProgressBar" />
    </RelativeLayout>
</LinearLayout>