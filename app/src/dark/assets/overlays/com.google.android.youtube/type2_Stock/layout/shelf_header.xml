<?xml version="1.0" encoding="utf-8"?>
<!-- Video: Play Next Texts -->
<LinearLayout android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@*com.google.android.youtube:dimen/shelf_header_normal_padding_top"
    android:paddingTop="16.0dip"
    android:paddingRight="16.0dip"
    android:paddingBottom="@*com.google.android.youtube:dimen/shelf_header_normal_padding_bottom"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:minHeight="32.0dip"
    android:paddingStart="@*com.google.android.youtube:dimen/shelf_header_normal_padding_top"
    android:paddingEnd="16.0dip"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:yt="http://schemas.android.com/apk/res-auto"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.libraries.youtube.common.ui.CircularImageView
        android:id="@*com.google.android.youtube:id/thumbnail"
        android:layout_width="@*com.google.android.youtube:dimen/list_heading_thumbnail_size"
        android:layout_height="@*com.google.android.youtube:dimen/list_heading_thumbnail_size"
        android:layout_marginRight="16.0dip"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16.0dip" />

    <RelativeLayout
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1.0">

        <include
            android:id="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="16.0dip"
            android:layout_alignParentEnd="true"
            layout="@*com.google.android.youtube:layout/contextual_menu_anchor" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textAppearance="@*com.google.android.youtube:style/ShelfHeader"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@*com.google.android.youtube:id/autonav_toggle_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:textIsSelectable="false"
            android:textAlignment="viewStart"
            android:layout_toStartOf="@*com.google.android.youtube:id/autonav_toggle_title"
            android:layout_alignParentStart="true"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/small_font_size"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/autonav_title"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@*com.google.android.youtube:id/autonav_toggle_title"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:textIsSelectable="false"
            android:textAlignment="viewStart"
            android:layout_toStartOf="@*com.google.android.youtube:id/autonav_toggle_title"
            android:layout_alignParentStart="true"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/list_heading_metadata_font_size"
            android:textColor="?android:textColorSecondary"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/subtitle"
            android:paddingTop="2.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:includeFontPadding="false"
            android:layout_below="@*com.google.android.youtube:id/title"
            android:layout_alignParentLeft="true"
            android:textIsSelectable="false"
            android:textAlignment="viewStart"
            android:layout_alignParentStart="true"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <com.google.android.apps.youtube.app.common.ui.chipcloud.ChipCloudView
            android:id="@*com.google.android.youtube:id/badges_container"
            android:paddingTop="4.0dip"
            android:paddingRight="8.0dip"
            android:paddingBottom="0.0dip"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@*com.google.android.youtube:id/subtitle"
            android:paddingEnd="8.0dip" />

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView android:textSize="@*com.google.android.youtube:dimen/small_font_size"
            android:textColor="#FFFFFF"
            android:ellipsize="end"
            android:id="@*com.google.android.youtube:id/autonav_toggle_title"
            android:paddingRight="4.0dip"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:includeFontPadding="false"
            android:layout_toLeftOf="@*com.google.android.youtube:id/autonav_toggle"
            android:layout_centerVertical="true"
            android:layout_alignWithParentIfMissing="true"
            android:textIsSelectable="false"
            android:textAlignment="viewStart"
            android:paddingEnd="4.0dip"
            android:layout_toStartOf="@*com.google.android.youtube:id/autonav_toggle"
            res-auto:robotoFont="regular"
            xmlns:res-auto="http://schemas.android.com/apk/res-auto" />

        <Switch
            android:gravity="center_vertical"
            android:id="@*com.google.android.youtube:id/autonav_toggle"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:text="@null"
            android:includeFontPadding="true"
            android:layout_toLeftOf="@*com.google.android.youtube:id/contextual_menu_anchor"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toStartOf="@*com.google.android.youtube:id/contextual_menu_anchor" />
    </RelativeLayout>
</LinearLayout>