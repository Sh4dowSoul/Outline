<?xml version="1.0" encoding="utf-8"?>
<!-- Chat Overlay Message Text -->
<LinearLayout android:orientation="horizontal"
    android:background="@*com.google.android.youtube:drawable/live_chat_light_overlay_text_item_background"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@*com.google.android.youtube:dimen/live_chat_overlay_horizontal_margin"
    android:layout_marginTop="@*com.google.android.youtube:dimen/live_chat_overlay_vertical_margin"
    android:layout_marginRight="@*com.google.android.youtube:dimen/live_chat_overlay_horizontal_margin"
    android:layout_marginBottom="@*com.google.android.youtube:dimen/live_chat_overlay_vertical_margin"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:tools="http://schemas.android.com/tools"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.google.android.libraries.youtube.common.ui.CircularImageView
        android:id="@*com.google.android.youtube:id/avatar"
        android:layout_width="@*com.google.android.youtube:dimen/live_chat_overlay_avatar_size"
        android:layout_height="@*com.google.android.youtube:dimen/live_chat_overlay_avatar_size"
        android:layout_marginLeft="4.0dip"
        android:layout_marginTop="4.0dip"
        android:layout_marginRight="4.0dip"
        android:layout_marginBottom="4.0dip"
        android:importantForAccessibility="no" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8.0dip"
        android:paddingRight="8.0dip"
        android:paddingBottom="4.0dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="@*com.google.android.youtube:dimen/live_chat_overlay_author_text_size"
            android:textColor="@*com.google.android.youtube:color/live_chat_light_overlay_author_name"
            android:layout_gravity="center_vertical"
            android:id="@*com.google.android.youtube:id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@*com.google.android.youtube:dimen/live_chat_overlay_text_item_max_width" />

        <TextView
            android:textSize="@*com.google.android.youtube:dimen/live_chat_overlay_comment_text_size"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_vertical"
            android:id="@*com.google.android.youtube:id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@*com.google.android.youtube:dimen/live_chat_overlay_text_item_max_width" />
    </LinearLayout>
</LinearLayout>