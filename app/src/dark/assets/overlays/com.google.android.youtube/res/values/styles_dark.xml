<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Stream to TV: Divider Style -->
    <style name="Mdx.PrefsSeparator" parent="@*com.google.android.youtube:style/Mdx">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1.0dip</item>
    </style>

    <!-- Some Texts -->
    <style name="TextAppearance.YouTube.Body1.Inverse" parent="@*com.google.android.youtube:style/Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>
    <style name="TextAppearance.YouTube.Subhead.Inverse" parent="@*com.google.android.youtube:style/TextAppearance.AppCompat.Subhead"/>
    <style name="TextAppearance.YouTube.Title.Inverse" parent="@*com.google.android.youtube:style/TextAppearance.AppCompat.Title"/>
    <style name="TextAppearance.YouTube.Caption.Inverse" parent="@*com.google.android.youtube:style/TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textColorHighlight">?android:textColorHighlight</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">?android:textColorLink</item>
    </style>
</resources>
