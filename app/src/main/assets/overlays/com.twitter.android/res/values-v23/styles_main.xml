<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main Them - Remove NavBar Bg -->
    <style name="ThemeBase" parent="@*com.twitter.android:style/Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:statusBarColor">@*com.twitter.android:color/status_bar_transluscent</item>
        <item name="*com.twitter.android:boldOverrideStyle">bold</item>
        <item name="*com.twitter.android:lineSpacing">@*com.twitter.android:dimen/line_spacing_extra</item>
        <item name="*com.twitter.android:toolbarBackground">@*com.twitter.android:color/clear</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>
    <style name="Theme.Modal" parent="@*com.twitter.android:style/Theme">
        <item name="android:windowAnimationStyle">@*com.twitter.android:style/ModalActivityAnimation</item>
        <item name="android:statusBarColor">@*com.twitter.android:color/status_bar_transluscent</item>
        <item name="*com.twitter.android:toolBarStyle">@*com.twitter.android:style/ToolBarStyle.Modal</item>
        <item name="*com.twitter.android:toolbarBackgroundColor">@*com.twitter.android:color/toolbar_bg_color</item>
        <item name="*com.twitter.android:toolbarForegroundColor">@*com.twitter.android:color/twitter_blue</item>
    </style>

    <!-- Gallery Theme - Disable Light NavBar -->
    <style name="Theme.Gallery" parent="@*com.twitter.android:style/Theme.DarkBase">
        <item name="*com.twitter.android:listRowStyle">@*com.twitter.android:style/ListRow.MediaTaggedUsers</item>
        <item name="*com.twitter.android:textColorSecondary">@*com.twitter.android:color/white_opacity_75</item>
        <item name="*com.twitter.android:toolBarStyle">@*com.twitter.android:style/ToolBarStyle.Circled</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarDividerColor">#00000000</item>
    </style>
</resources>
