<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Backups Theme -->
    <style name="BaseAppTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:buttonStyle">@*com.google.android.apps.docs:style/BaseButton</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:colorPrimary">#FFFFFF</item>
        <item name="android:colorPrimaryDark">#FFFFFF</item>
        <item name="android:colorAccent">@android:color/holo_blue_light</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>
        <item name="android:navigationBarDividerColor">#e0e0e0</item>
    </style>

    <!-- PDF Viewer Theme -->
    <style name="OpaqueTheme" parent="@*com.google.android.apps.docs:style/CommonTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:navigationBarDividerColor">#000000</item>
    </style>

    <!-- SplashScreen -->
    <style name="CakemixTheme.SplashScreen" parent="@*com.google.android.apps.docs:style/CakemixTheme">
        <item name="android:windowBackground">@*com.google.android.apps.docs:drawable/quantum_launchscreen_drive</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">#FAFAFA</item>
    </style>
</resources>
