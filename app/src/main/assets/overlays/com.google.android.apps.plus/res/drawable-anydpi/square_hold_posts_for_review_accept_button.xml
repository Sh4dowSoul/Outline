                android:strokeColor="@*com.google.android.apps.plus:color/material_grey_600"
                android:strokeWidth="1.5"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"
                android:pathData="M4.276 12.995L8.709
  17.5l11.015-11"/>
        </vector>
    </item>

</layer-list>