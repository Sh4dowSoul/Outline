<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DrawerItemIconStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">@*com.google.android.keep:dimen/drawer_item_icon_size</item>
        <item name="android:layout_height">@*com.google.android.keep:dimen/drawer_item_icon_size</item>
        <item name="android:scaleType">center</item>
        <item name="android:alpha">1</item>
    </style>

    <!-- BottomBar -->
    <style name="QebFloatingContainerStyle" parent="@*com.google.android.keep:style/QebContainerStyle">
        <item name="android:background">@*com.google.android.keep:drawable/qeb_shadow_top</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:elevation">5dp</item>
    </style>
</resources>