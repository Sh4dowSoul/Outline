        <item name="*com.google.android.calendar:windowNoTitle">true</item>
        <item name="*com.google.android.calendar:colorPrimary">@*com.google.android.calendar:color/calendar_primary</item>
        <item name="*com.google.android.calendar:colorAccent">@*com.google.android.calendar:color/accent_blue</item>

