<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button -->
    <style name="TextAppearance.YouTubeMusic.Button1" parent="@*com.google.android.apps.youtube.music:style/TextAppearance.AppCompat">
        <item name="android:textSize">@*com.google.android.apps.youtube.music:dimen/button_1_text_size</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="*com.google.android.apps.youtube.music:robotoFont">medium</item>
    </style>

    <!-- Cast Menu -->
    <style name="Theme.YouTubeMusic.MediaRouter" parent="@*com.google.android.apps.youtube.music:style/Theme.MediaRouter.Light">
        <item name="android:windowBackground">@*com.google.android.apps.youtube.music:drawable/dialog_background</item>
        <item name="*com.google.android.apps.youtube.music:colorAccent">@*com.google.android.apps.youtube.music:color/ytm_color_white</item>
        <item name="*com.google.android.apps.youtube.music:colorControlNormal">@*com.google.android.apps.youtube.music:color/ytm_color_control_normal</item>
        <item name="*com.google.android.apps.youtube.music:colorControlActivated">@*com.google.android.apps.youtube.music:color/ytm_color_blue_01</item>
        <item name="*com.google.android.apps.youtube.music:colorBackgroundFloating">@*com.google.android.apps.youtube.music:color/ytm_theme_main_color_primary</item>
    </style>
</resources>