<?xml version="1.0" encoding="utf-8"?>
<com.google.android.libraries.youtube.common.ui.FixedAspectRatioRelativeLayout android:id="@*com.google.android.apps.youtube.music:id/single_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    _xmlns:android="http://schemas.android.com/apk/res/android"
    _xmlns:tools="http://schemas.android.com/tools"
    xmlns:_xmlns="xmlns"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:id="@*com.google.android.apps.youtube.music:id/thumbnail_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <View
        android:id="@*com.google.android.apps.youtube.music:id/background_overlay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@*com.google.android.apps.youtube.music:dimen/full_bleed_item_text_margin_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="10.0"
        android:layout_above="@*com.google.android.apps.youtube.music:id/subtitle_container"
        android:paddingStart="@*com.google.android.apps.youtube.music:dimen/full_bleed_item_text_margin_start">

        <com.google.android.libraries.youtube.common.ui.YouTubeTextView
            android:textAppearance="@*com.google.android.apps.youtube.music:style/TextAppearance.YouTubeMusic.Display1"
            android:ellipsize="end"
            android:id="@*com.google.android.apps.youtube.music:id/title"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_weight="8.0"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@*com.google.android.apps.youtube.music:id/subtitle_container"
        android:paddingLeft="@*com.google.android.apps.youtube.music:dimen/full_bleed_item_text_margin_start"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@*com.google.android.apps.youtube.music:dimen/full_bleed_item_text_margin_bottom"
        android:baselineAligned="false"
        android:weightSum="10.0"
        android:layout_alignParentBottom="true"
        android:paddingStart="@*com.google.android.apps.youtube.music:dimen/full_bleed_item_text_margin_start">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_weight="8.0">

            <LinearLayout
                android:orientation="horizontal"
                android:id="@*com.google.android.apps.youtube.music:id/subtitle_badges_container"
                android:paddingTop="@*com.google.android.apps.youtube.music:dimen/full_bleed_item_badge_container_padding_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:divider="@*com.google.android.apps.youtube.music:drawable/badge_container_space_divider"
                android:showDividers="end|middle" />

            <com.google.android.libraries.youtube.common.ui.YouTubeTextView
                android:textAppearance="@*com.google.android.apps.youtube.music:style/TextAppearance.YouTubeMusic.Body1"
                android:ellipsize="end"
                android:id="@*com.google.android.apps.youtube.music:id/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:textColor="#b3FFFFFF"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@*com.google.android.apps.youtube.music:id/thumbnail_overlay_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</com.google.android.libraries.youtube.common.ui.FixedAspectRatioRelativeLayout>