        <item name="android:actionBarStyle">@*com.android.settings:style/Theme.ActionBar.SubSettings</item>
        <item name="*android:colorSecondary">#FAFAFA</item>
        <item name="*com.android.settings:switchBarTheme">@*com.android.settings:style/ThemeOverlay.SwitchBar.SubSettings</item>
    </style>
</resources>
