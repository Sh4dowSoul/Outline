        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
        <item name="*com.google.android.apps.plus:actionMenuTextColor">?android:textColorPrimaryInverse</item>
        <item name="*com.google.android.apps.plus:actionOverflowButtonStyle">@*com.google.android.apps.plus:style/Theme.Arkham.ActionBar.BlackOverflow</item>
