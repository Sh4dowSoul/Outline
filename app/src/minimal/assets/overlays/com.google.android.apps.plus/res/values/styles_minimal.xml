<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomBarItemVertical">
        <item name="android:textSize">@*com.google.android.apps.plus:dimen/text_size_12</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@*com.google.android.apps.plus:drawable/bottom_bar_item_ripple</item>
        <item name="android:paddingTop">@*com.google.android.apps.plus:dimen/navigation_bar_y_top_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@*com.google.android.apps.plus:dimen/navigation_bar_y_drawable_padding</item>
        <item name="android:colorControlNormal">#757575</item>
    </style>

    <!-- Notifications - Spinner Title -->
    <style name="NotificationsTray.Title" parent="@*com.google.android.apps.plus:style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@*com.google.android.apps.plus:dimen/text_size_20</item>
        <item name="android:textColor">#de000000</item>
    </style>
</resources>
